FROM node:25-alpine AS builder

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

RUN npm run build

RUN npm test

FROM node:25-alpine

WORKDIR /app
COPY --from=builder /app/package*.json ./
RUN npm install --omit=dev

COPY --from=builder /app/dist ./dist

EXPOSE 1337
CMD ["node", "dist/src/index.js"]
